<Window
    x:Class="SoftFluent.Windows.Samples.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:samples="clr-namespace:SoftFluent.Windows.Samples"
    xmlns:windows="clr-namespace:SoftFluent.Windows;assembly=PropertyGrid.WPF"
    Title="MainWindow"
    Width="608"
    Height="638">
    <Grid>
        <Grid.Resources>
            <samples:Customer2 x:Key="Customer" />
        </Grid.Resources>
        <windows:PropertyGrid
            Name="MyGrid"
            SelectedObject="{StaticResource Customer}" />
    </Grid>
</Window>